<h2>Add new composition information</h1>

<form action="/compositions/<%= @composition.slug %> " method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label for="list">Choose a category for this piece:</label>
    <select id="list" name="list[name]">
        <option value="solo">Solo Composition</option>
        <option value="chamber">Chamber Music</option>
        <option value="concerto">Concerto</option>
    </select>

    <br/><br/>
    <label for="title">Title:</label>
    <input id="title" type="text" name="list[composition][title]" value="<%= @composition.title %>">
    <br/><br/>

    <label for="composer">Composer's Name:</label>
    <input id="composer" type="text" name="list[composition][composer]" value ="<%= @composition.composer %>">
    <br/><br/>

    <label for="instrumentation">Instrumentation:</label>
    <input id="instrumentation" type="text" name="list[composition][instrumentation]" value ="<%= @composition.instrumentation %>">
    <br/><br/>

    <p>Select the Era:</p>
    <% Era.all.each do |e|%>
    <input type="radio" id="<%= e.name %>" name="list[composition][era_id]" value="<%= e.id %>" <%= 'checked' if @composition.era_id == e.id %>>
    <label for="<%= e.name %>"><%= e.name %></label><br>
    <% end %>
    <br/><br/>

    <input type="submit" value="submit">
</form>
